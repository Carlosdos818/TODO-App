<%- include('./layouts/partials/header') %>

<div class="wrapper">
    <div class="header">
        <h2>To-Do App</h2>
    </div>
    <main class="new-todo-item">
        <form action="/login" method="post"> <!-- This is the login route -->
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br>
            <button type="submit" class="login">Login</button>
            <a href="/auth/google" class="login">Login with Google&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
        </form>
    </main>
    <div class="">
        <p>&copy; <%= new Date().getFullYear() %> Todo App</p>
    </div>
</div>

<%- include('./layouts/partials/footer') %>
