<%- include('../layouts/partials/header', { title: 'Todo List' }) %>
<div class="wrapper">
  <div class="header">
    <h2>Todo List</h2>
  </div>
  <div class="add-new-todo">
    <span>Add New Todo</span>
    <a href="/todos/new">
      <i class="fa-solid fa-square-plus"></i>
    </a>
  </div>
  <div class="sub-header"><h4>Task</h4></div>

  <div class="todo-list">
    <% todos.forEach(todo => { %>
      <li class="todo-item">
        <%= todo.title %>
        <a href="/todos/<%= todo._id %>"><i class="fa-solid fa-eye"></i></a>
        <a href="/todos/<%= todo._id %>/edit"><i class="fa-solid fa-file-pen"></i></a>
        <form action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this todo?')" style="border: none; background: none; padding: 0;">
            <i class="fa-solid fa-trash" style="color: blue;"></i>
          </button>
        </form>
        
        
      </li>
      <% }); %>
  </div>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Todo App</p>
  </footer>
</div>
  
<%- include('../layouts/partials/footer') %>
