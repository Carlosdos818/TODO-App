<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body>

<nav>
  <div class="nav-wrapper blue">
    <a href="/" class="brand-logo center">Todo App</a>
    <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
      <li><a href="/">Home</a></li>
      <li><a href="/todos">Todos</a></li>
      <li><a href="/login">Login</a></li>
    </ul>
  </div>
</nav>

<ul class="sidenav" id="mobile-nav">
  <li><a href="/">Home</a></li>
  <li><a href="/todos">Todos</a></li>
  <li><a href="/login">Login</a></li>
</ul>

<div class="container mt-4">
  <%- body %>
</div>

<footer class="mt-4 blue lighten-2 white-text center">
  <p>&copy; <%= new Date().getFullYear() %> Todo App</p>
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.sidenav');
    var instances = M.Sidenav.init(elems);

    var collapsibleNavbar = document.querySelector('.collapsible');
    var collapsibleInstance = M.Collapsible.init(collapsibleNavbar);

    // Add any other Materialize initialization you need here
  });
</script>

</body>
</html>
